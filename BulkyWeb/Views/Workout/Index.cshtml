@model List<Workout>

<div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                Workout List
                </h2>
            </div>
            <div class="col-6 text-end">
            <a asp-controller="Workout" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Workout
                </a>
            </div>
        </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Workout Type
        </th>
        <th>
            Workout Duration
        </th>
        <th>
            Cheat Meal
        </th>
        <th>
            Workout Date
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
            @foreach (var obj in Model.OrderBy(u => u.WorkoutDate))
        {
            <tr>
                    <td>@obj.WorkoutType</td>
                <td>
                        @obj.WorkoutDuration
                </td>
                <td>
                    @obj.CheatMeal
                </td>
                <td>
                        @obj.WorkoutDate
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Workout" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a asp-controller="Workout" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>